<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="93dp"
        android:layout_height="77dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewEuro"
        app:layout_constraintStart_toStartOf="@+id/textViewEuro"
        app:layout_constraintTop_toBottomOf="@+id/textViewEuro"
        app:srcCompat="@drawable/euro" />

    <EditText
        android:id="@+id/editTextUSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:ems="10"
        android:hint="@string/input_hint"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/textViewUSD"
        app:layout_constraintStart_toEndOf="@+id/textViewUSD"
        app:layout_constraintTop_toTopOf="@+id/textViewUSD" />

    <TextView
        android:id="@+id/textViewUSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:text="@string/usd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/euro"
        app:layout_constraintEnd_toEndOf="@+id/textViewUSD"
        app:layout_constraintStart_toStartOf="@+id/textViewUSD"
        app:layout_constraintTop_toBottomOf="@+id/textViewUSD" />

    <TextView
        android:id="@+id/textViewEuroResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewEuro"
        app:layout_constraintStart_toEndOf="@+id/textViewEuro"
        app:layout_constraintTop_toTopOf="@+id/textViewEuro" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="93dp"
        android:layout_height="77dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewUSD"
        app:layout_constraintEnd_toEndOf="@+id/textViewUSD"
        app:layout_constraintStart_toStartOf="@+id/textViewUSD"
        app:srcCompat="@drawable/usd" />

</androidx.constraintlayout.widget.ConstraintLayout>